keywords = {Electron Spin Resonance Spectroscopy,Humans,Magnetic Resonance Spectroscopy,Magnetic Resonance Spectroscopy: diagnostic use,Magnetic Resonance Spectroscopy: methods},
number = {2},
pages = {479--88},
title = {{Analytical tools for magnetic resonance imaging.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/6091173},
